{
  "name": "bionl/bioinfile pipeline",
  "description": "BLAST pipeline",
  "type": "object",
  "definitions": {
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "help_text": "Specify input file and output folder.",
      "required": [
        "input",
        "outdir"
      ],
      "properties": {
        "input": {
          "description": "Path to query fasta file.",
          "help_text": "Your query sequences in FASTA format",
          "fa_icon": "fas fa-file",
          "type": "string",
          "format": "file-path",
          "schema": "assets/schema_input.json",
          "mimetype": "text/csv",
          "pattern": "^\\S+\\.csv$",
          "exists": true
        },
        "outdir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open"
        }
      }
    },
    "blast_options": {
      "title": "BLAST options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "help_text": "Specify input file and output folder.",
      "required": [],
      "properties": {
        "db_files": {
          "type": "string",
          "format": "directory-path",
          "description": "The directory containing blastdb files",
          "fa_icon": "fas fa-folder-open",
          "default": "gs://bionfile-test/reference_db_v2",
          "hidden": true
        },
        "db_name": {
          "type": "string",
          "description": "Blast db name used in makeblastdb command",
          "fa_icon": "fas fa-cloud-download-alt",
          "default": "BIOINFILEDBTEST1",
          "hidden": true
        },
        "taxonomy": {
          "description": "Path to taxonomy file.",
          "fa_icon": "fas fa-file",
          "type": "string",
          "format": "file-path",
          "exists": true,
          "hidden": true
        },
        "script": {
          "description": "Path to python script file.",
          "fa_icon": "fas fa-file",
          "type": "string",
          "format": "file-path",
          "exists": true,
          "hidden": true
        },
        "blast_results_dir": {
          "description": "The directory where BLAST result files will be stored.",
          "fa_icon": "fas fa-folder-open",
          "type": "string",
          "default": "blast_results",
          "exists": true
        },
        "decision_output_dir": {
          "description": "The directory where decision-making outputs derived from BLAST results will be saved.",
          "fa_icon": "fas fa-folder-open",
          "type": "string",
          "default": "blastdm_outputs",
          "exists": true
        }
      }
    }
  }
}